@model Projet.Akotchaye.App_Data.Salle
@{
    ViewBag.Title = "DesactivSalle";
}

<h2>Désactiver la salle</h2>

<div>

    <hr />
    <form method="post" enctype="multipart/form-data">
        <dl class="dl-horizontal">
            <dt>
                <label for="NomSalle">Nom</label>
                <input type="hidden" class="" name="NomSalle" value="@Model.NomSalle" required>
                <input type="hidden" class="" name="DescripSalle" value="@Model.DescripSalle" required>
            </dt>

            <dd>
                @Html.DisplayFor(model => model.NomSalle)
            </dd>
            <dt>
                <label for="CapaciteSalle">Capacité</label>
                <input type="hidden" class="" name="CapaciteSalle" value="@Model.CapaciteSalle" required>
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CapaciteSalle)
            </dd>

            <dt>
                <label for="MontantRes">Prix horaire</label>

                <input type="hidden" class="" name="IdGes" value="@Model.IdGes" required>
                <input type="hidden" class="" name="IdSalle" value="@Model.IdSalle" required>
                <input type="hidden" class="" name="IdUser" value="@Model.IdUser" required>
                <input type="hidden" class="" name="ImgSalle1" value="@ViewBag.ImgSalle1" required>
                <input type="hidden" class="" name="ImgSalle2" value="@ViewBag.ImgSalle2" required>


            </dt>

            <dd>
                <label for="PrixSalle"> @String.Format("{0:N0}", Model.PrixSalle) F CFA</label>
                <input type="hidden" class="" name="PrixSalle" value="@Model.PrixSalle" required>

            </dd>

          
            <dt>
                <label for="EtatRes">Etat</label>

            </dt>

            <dd>
                @Html.DisplayFor(model => model.EtatSalle)
            </dd>

            <dt>
                <label for="AdrSalle">Adresse</label>
                <input type="hidden" class="" name="AdrSalle" value="@Model.AdrSalle" required>
            </dt>

            <dd>
                @Html.DisplayFor(model => model.AdrSalle)
            </dd>

        </dl>

        @Html.AntiForgeryToken()
        <div class="form-group">

            <input type="submit" value="Désactiver" class="btn btn-primary" />

        </div>
        <div class="form-group">

            @Html.ActionLink("Retour", "DashGes", "Dashboard")

        </div>

    </form>

</div>


