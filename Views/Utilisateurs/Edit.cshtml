            <div class="form-group">
                <label for="Email">Email </label>

                <div class="col-md-4">
                    <input type="email" class="form-control" name="Email" value="@Model.Email" aria-describedby="" placeholder="Votre mail" required>
                </div>
            </div>

            <div class="form-group">
                <label for="Adresse">Adresse  </label>

                <div class="col-md-4">
                    <input type="text" class="form-control" name="Adresse" value="@Model.Adresse" aria-describedby="" placeholder="Votre Adresse" required>
                </div>
            </div>

            <div class="form-group">
                <div class=" col-md-10">
                    <input type="submit" value="Enregistrer" class="btn btn-success" />
                </div>
            </div>

    </form>
</div>

